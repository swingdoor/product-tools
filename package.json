{
  "name": "product-tools",
  "version": "1.0.0",
  "description": "AI辅助产品工具客户端 - 市场洞察、产品需求分析、产品原型",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "chcp 65001 > nul && vite",
    "build": "vue-tsc --noEmit && vite build",
    "build:electron": "node scripts/build-electron.js",
    "build:all": "npm run build && npm run build:electron",
    "electron:dev": "chcp 65001 > nul && set ELECTRON=true&& vite",
    "electron:build": "npm run build:all && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "better-sqlite3": "^12.6.2",
    "cheerio": "^1.0.0-rc.12",
    "dayjs": "^1.11.10",
    "docx": "^8.5.0",
    "electron-store": "^8.2.0",
    "element-plus": "^2.6.0",
    "fabric": "^5.3.0",
    "file-saver": "^2.0.5",
    "highlight.js": "^11.9.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "konva": "^10.2.0",
    "markdown-it": "^14.1.0",
    "marked": "^12.0.0",
    "pinia": "^2.1.7",
    "vue": "^3.4.0",
    "vue-konva": "^3.3.0",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/fabric": "^5.3.7",
    "@types/file-saver": "^2.0.7",
    "@types/markdown-it": "^14.1.1",
    "@types/node": "^20.11.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "concurrently": "^8.2.2",
    "electron": "^34.5.8",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.27.3",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.1.0",
    "vite-plugin-electron": "^0.28.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^3.2.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.producttools.app",
    "productName": "ProductTools",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    },
    "npmRebuild": true,
    "nodeGypRebuild": true
  }
}